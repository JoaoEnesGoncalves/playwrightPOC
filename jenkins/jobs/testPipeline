pipeline {
    agent {
        docker {
            label 'playwrightNodes'
            image 'mcr.microsoft.com/playwright:v1.35.0-jammy'
            args '-u 0:0'
        }
    }
    stages {
        stage('run playwright docker image') {
            steps {
                sh 'hostname'
                sh 'pwd'
                sh 'node --version'
                sh 'ls -al'
                sh 'npm ci'
                sh 'npx playwright test'
            }
        }
    }
}

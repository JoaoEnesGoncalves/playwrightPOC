pipeline {
    agent {
        docker {
            label 'playwrightNodes'
            image 'mcr.microsoft.com/playwright:v1.35.0-jammy'
            args '-u 0:0'
        }
    }
    stages {
        stage('run playwright docker image') {
            steps {
                sh 'hostname'
                sh 'pwd'
                sh 'node --version'
                sh 'npm ci'
                sh 'PLAYWRIGHT_JUNIT_OUTPUT_NAME=results.xml npx playwright test --project=chromium --reporter=junit'
                sh 'ls -al'
                archiveArtifacts artifacts: '**', followSymlinks: false
            }
        }
    }
    post {
        always {
            junit 'results.xml'
        }
    }
}
